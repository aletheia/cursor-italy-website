---
import { Home, ArrowLeft } from 'lucide-react';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title='Page Not Found' description="The page you're looking for doesn't exist.">
  <div class='min-h-screen flex items-center justify-center bg-gray-50'>
    <div class='max-w-md mx-auto container-padding text-center'>
      <div class='space-y-8'>
        <div class='space-y-4'>
          <h1 class='text-9xl font-bold gradient-text'>404</h1>
          <h2 class='text-2xl font-bold text-gray-900'>Page Not Found</h2>
          <p class='text-gray-600'>
            Sorry, we couldn't find the page you're looking for. The page might
            have been moved or deleted.
          </p>
        </div>

        <div class='flex flex-wrap justify-center gap-4'>
          <a href='/' class='btn btn-primary'>
            <Home className='w-4 h-4 mr-2' />
            Go Home
          </a>
          <button onclick='history.back()' class='btn btn-secondary'>
            <ArrowLeft className='w-4 h-4 mr-2' />
            Go Back
          </button>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
