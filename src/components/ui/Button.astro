---
import clsx from 'clsx';

interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  external?: boolean;
  disabled?: boolean;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  variant = 'primary',
  size = 'md',
  href,
  external = false,
  disabled = false,
  class: className,
  type = 'button',
  ...props
} = Astro.props;

const baseClasses =
  'inline-flex items-center justify-center rounded-lg font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

const variants: Record<string, string> = {
  primary: 'bg-cursor-blue hover:bg-blue-700 text-white focus:ring-cursor-blue',
  secondary: 'bg-gray-100 hover:bg-gray-200 text-gray-900 focus:ring-gray-500',
  outline: 'border border-gray-300 bg-white hover:bg-gray-50 text-gray-700 focus:ring-gray-500',
  ghost: 'text-gray-700 hover:bg-gray-100 focus:ring-gray-500',
};

const sizes: Record<string, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const classes = clsx(baseClasses, variants[variant], sizes[size], className);
---

{href ? (
  external ? (
    <a
      href={href}
      target='_blank'
      rel='noopener noreferrer'
      class={classes}
      {...props}
    >
      <slot />
    </a>
  ) : (
    <a href={href} class={classes} {...props}>
      <slot />
    </a>
  )
) : (
  <button type={type} class={classes} disabled={disabled} {...props}>
    <slot />
  </button>
)}
